<!DOCTYPE html>
<html>
    <head>
        <title>DesignForm</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Jquery and Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

        <!-- addition css to make the icon -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- Website CSS style -->
        <link rel="stylesheet" type="text/css" href="../css/user_style.css">

        <!-- Website js-->
        <script src="../script/user.js"></script>
    </head>

    <body data-spy="scroll" data-target=".navbar" data-offset="50">
        
        <!-- title bar -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <!-- the left site name and logo -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>                        
                    </button>
                    <a class="navbar-brand" href="/">DesignForm</a>
                </div>
                
                <!-- the right bars -->
                <div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav navbar-right">
                            <% var home_url= "user_home?username=" + person.username %>
                            <li><a class="home_ref" href=<%=home_url%> id="user_ref"><%=person.username%></a></li>
                            <li><a href="main.html">Log out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <br /> <br /> <br />
        
        <!-- the swipable part -->
        <div class="container">
            <div id="sidebar">
                <ul>
                <% var user_search_url = "user_search?user=" + person.username %>
                <% var explore_url = "explore?username=" + person.username %>
                    <li><a href="/main">Home</a></li>
                    <li><a href=<%= explore_url%>>Explore</a></li>
                    <li><a href=<%= user_search_url %>>Users</a></li>
                    <li><a href="/">Sign Out</a></li>
                    <br />
                    <select id="search_option">
                        <option value="id">Id</option>
                        <option value="country">Country</option>
                        <option value="fname">Family Name</option>
                    </select>
                    <br />
                    <li><p style="color:grey">Search</p></li>
                    <li>
                        <input type="text" id="search_text"></input>
                        <button id="search_btn"><i class="fa fa-search"></i></button>
                    </li>
                </ul>
            </div>

            <!-- the main content part -->
            <div class="main-content">
                <div class="swipe-area">
                </div>

                <!-- the swapable button -->
                <a href="#" data-toggle=".container" id="sidebar-toggle">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </a>

                <!-- main content of the page -->
                <div class="content">
                    <img src="../img/top.jpg" width="100%" height="200px">
                    <nav class="navbar navbar-inverse" id="submenu" style="height:60px";>
                        <div class="container-fluid">
                         
                            <!-- the user's menu-->
                            <% var gallery_url= "gallery?username=" + person.username %>
                            <% var profile_url= "profile?username=" + person.username %>
                            <% var add_url= "addproduct?username=" + person.username %>
                            <div class="collapse navbar-collapse">
                                <a id="go_home_btn" href=<%=home_url%> style="font-size: 40px; color:lightblue">Home</a> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                <a href=<%=profile_url%> style="font-size: 40px; color:lightblue" id="get_profile_btn">Profile</a> &nbsp&nbsp&nbsp&nbsp &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp &nbsp&nbsp
                                <a href=<%=gallery_url%> id="gallery_btn" style="font-size: 40px; color:lightblue">Gallery</a> &nbsp&nbsp&nbsp&nbsp &nbsp&nbsp&nbsp&nbsp &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                <a href=<%=add_url%> id="addproduct_btn" style="font-size: 40px; color:lightblue">Add product</a> &nbsp&nbsp&nbsp&nbsp &nbsp&nbsp&nbsp&nbsp &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                            </div>
                        </div>
                    </nav>

                    <!-- the part that may change with the user's choice in this case is the profile-->
                    <div id="changing_part">
                        
                        <!-- The profile content-->
                        <% persons.forEach(function(person){%>
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
                                    <div class="panel panel-info">
                                        <div class="panel-heading">
                                        <h3 class="panel-title" id="user_name"><%= person.givenname %>&nbsp<%= person.lastname %></h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="row">
                                             <% if(!person.picture){%>
                                                <div class="col-md-3 col-lg-3 " align="center"> <img  src="./img/face.jpg" class="img-circle img-responsive"> </div>
                                            <% }%>
                                                 <div class="col-md-3 col-lg-3 " align="center"> <img  src="<%= person.picture %>" class="img-circle img-responsive"> </div>
                                                <div class=" col-md-9 col-lg-9 "> 
                                                    <table class="table table-user-information">
                                                        <tbody>
                                                          
                                                            <tr>

                                                                <td>Status:</td>

                                                                <td id="status_name"><%= person.status %></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Role:</td>
                                                                <td id="role_name"><%= person.role %></td>
                                                            </tr>
                                                            <tr>
                                                                <tr>
                                                                    <td>Gender</td>
                                                                    <td id="gender_name"><%= person.gender %></td>
                                                                </tr>
                                                                    <td>Email</td>
                                                                    <td><a href="#" id="email_name"><%= person.email %></a></td>
                                                                </tr>
                                                                <td>Country</td>
                                                                <td id="country_name"><%= person.country %>
                                                                </td>
                                                            </tr>
                                                            
                                                        </tbody>
                                                    </table>
                                                </div>    
                                            </div>
                                        </div>
                                        
                                        <!-- the footer -->
                                        <div class="panel-footer" style="height:50px">
                                            <span class="pull-right">
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>
    
    </body>
</html>
